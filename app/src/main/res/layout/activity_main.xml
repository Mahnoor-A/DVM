<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.AppCompat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:backgroundTint="@color/bg_blue"
    tools:context="com.example.testapplication.MainActivity">

    <GridView
        android:id="@+id/activity_main_grid_view"
        android:numColumns="auto_fit"
        android:verticalSpacing="4dp"
        android:gravity="center"
        android:horizontalSpacing="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_blue"/>

    <TextView
        android:id="@+id/activity_main_empty_view"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="@string/activity_main_empty_view_text"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/bg_blue"/>
    
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/myFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/plus"
        android:backgroundTint="@color/button_skin"
        android:contentDescription="@string/fab_transformation_scrim_behavior"
        android:layout_margin="16dp"
        android:onClick="addNewMemory"/>




</FrameLayout>
